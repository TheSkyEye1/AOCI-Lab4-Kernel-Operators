<Window x:Class="Example_Kernel_Operators.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_Kernel_Operators"
        mc:Ignorable="d"
        Title="Лабораторная работа #4" Height="700" Width="920">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <StackPanel Margin="5">

                <Button Content="Открыть изображение" Click="LoadImage_Click" Margin="0,0,0,5" FontWeight="Bold"/>
                <Button Content="Сохранить изображение" Click="SaveImage_Click" Margin="0,0,0,20" FontWeight="Bold"/>
                <Button Content="Применить изменения" Click="UpdateImage_Click" Margin="0,0,0,5"/>
                <Button Content="Сбросить" Click="Clear_Click" Margin="0,0,0,20"/>

                <Border BorderBrush="DimGray" BorderThickness="1" Margin="5">

                    <StackPanel Margin="5">
                        

                        <Label Content="Фильтр ручного ввода" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <Border BorderBrush="DimGray" BorderThickness="1" Margin="5">
                            <UniformGrid Rows="3" Columns="3" x:Name="KernelGrid">
                                <TextBox Height="30" Width="40" Margin="4" Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                <TextBox Height="30" Width="40" Margin="4" Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                <TextBox Height="30" Width="40" Margin="4" Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                <TextBox Height="30" Width="40" Margin="4" Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                <TextBox Height="30" Width="40" Margin="4" Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                <TextBox Height="30" Width="40" Margin="4" Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                <TextBox Height="30" Width="40" Margin="4" Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                <TextBox Height="30" Width="40" Margin="4" Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                                <TextBox Height="30" Width="40" Margin="4" Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                            </UniformGrid>
                        </Border>

                        <Button Content="Применить фильтр Ч/Б" Click="CustomFilterGray_Click" Margin="0,5,0,0"/>
                        <Button Content="Применить фильтр Цветное" Click="CustomFilter_Click" Margin="0,5,0,10"/>

                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>

        <Border Grid.Column="1" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <Image Name="MainImage"  Margin="5" Stretch="Uniform"/>
        </Border>

    </Grid>
</Window>
